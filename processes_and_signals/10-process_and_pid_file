#!/usr/bin/env bash
# Script that writes its PID to /var/run/myscript.pid
# and reacts to SIGINT and SIGTERM

trap 'echo "Y U no love me?!"; rm -f /var/run/myscript.pid; exit' INT
trap 'echo "I hate the kill command"; rm -f /var/run/myscript.pid; exit' TERM

echo "$$" > /var/run/myscript.pid

while true; do
    echo "To infinity and beyond"
    sleep 2
done
