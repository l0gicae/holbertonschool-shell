#!/usr/bin/env bash
# Script that writes its PID to /var/run/myscript.pid and handles signals

PID_FILE="/var/run/myscript.pid"

echo $$ > "$PID_FILE"

handle_sigterm() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

handle_sigint() {
    echo "Y U no love me?!"
}

handle_sigquit() {
    rm -f "$PID_FILE"
    exit 0
}

trap 'handle_sigterm' TERM
trap 'handle_sigint' INT
trap 'handle_sigquit' QUIT

while true
do
    echo "To infinity and beyond"
    sleep 1
done
