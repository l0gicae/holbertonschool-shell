cd ~/holbertonschool-shell/processes_and_signals

cat > 10-process_and_pid_file << 'EOF'
#!/usr/bin/env bash
# Script that creates a PID file with its PID and handles signals

# PID dosyasını oluştur (kendi PID'sini yazar)
echo "$$" > /var/run/myscript.pid

# SIGINT (Ctrl+C) -> sadece mesaj, devam eder
trap 'echo "Y U no love me?!";' INT

# SIGTERM -> mesaj yaz, PID dosyasını sil ve çık
trap 'echo "I hate the kill command"; rm -f /var/run/myscript.pid; exit 0' TERM

# SIGQUIT -> PID dosyasını sil ve çık
trap 'rm -f /var/run/myscript.pid; exit 0' QUIT

# Sonsuza kadar yaz
while true; do
    echo "To infinity and beyond"
    sleep 1
done
EOF

chmod +x 10-process_and_pid_file
