#!/usr/bin/env bash
# Script that creates a PID file with its PID and handles signals

pid_file="/var/run/myscript.pid"

# PID dosyasını oluştur (kendi PID'sini yazar)
echo "$$" > "$pid_file"

# SIGINT (Ctrl+C) -> sadece mesaj, devam
on_sigint() {
    echo "Y U no love me?!"
}

# SIGTERM -> mesaj yaz, PID dosyasını sil ve çık
on_sigterm() {
    echo "I hate the kill command"
    rm -f "$pid_file"
    exit 0
}

# SIGQUIT -> PID dosyasını sil ve çık
on_sigquit() {
    rm -f "$pid_file"
    exit 0
}

# Sinyalleri yakala
trap 'on_sigint' INT
trap 'on_sigterm' TERM
trap 'on_sigquit' QUIT

# Sonsuza kadar yaz
while true; do
    echo "To infinity and beyond"
    sleep 1
done
