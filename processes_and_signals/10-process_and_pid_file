#!/usr/bin/env bash
# Script that writes its PID to a file and reacts to signals

echo "$$" > 10-process_and_pid_file.pid

trap 'echo "Y U no love me?!"; rm -f 10-process_and_pid_file.pid; exit' SIGINT
trap 'echo "I hate the kill command"; rm -f 10-process_and_pid_file.pid; exit' SIGTERM

while true
do
  echo "To infinity and beyond"
  sleep 2
done
