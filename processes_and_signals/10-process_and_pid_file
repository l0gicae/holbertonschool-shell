#!/usr/bin/env bash
# Script that writes its PID to /var/run/myscript.pid and handles signals

PID_FILE="/var/run/myscript.pid"

# PID dosyasını oluştur (kendi PID'si ile)
echo $$ > "$PID_FILE"

# SIGTERM: Mesaj yaz, PID dosyasını sil, çık
handle_sigterm() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# SIGINT (Ctrl+C): Mesaj yaz (çıkmıyor, devam ediyor)
handle_sigint() {
    echo "Y U no love me?!"
}

# SIGQUIT: PID dosyasını sil ve çık
handle_sigquit() {
    rm -f "$PID_FILE"
    exit 0
}

trap handle_sigterm TERM
trap handle_sigint INT
trap handle_sigquit QUIT

# Sonsuza kadar ekrana yaz
while true
do
    echo "To infinity and beyond"
    sleep 1
done
