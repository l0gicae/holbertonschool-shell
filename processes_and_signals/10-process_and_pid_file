#!/usr/bin/env bash
# Creates a PID file in /var/run/, handles signals and loops

path="/var/run/myscript.pid"

trap 'echo "I hate the kill command"; rm -f "$path"; exit' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap 'rm -f "$path"; exit' SIGQUIT

echo $$ > "$path"

while true; do
    echo "To infinity and beyond"
    sleep 2
done
