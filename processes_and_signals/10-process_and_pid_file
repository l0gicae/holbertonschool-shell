#!/usr/bin/env bash
# Creates /var/run/myscript.pid and handles signals

PID_FILE="/var/run/myscript.pid"
echo "$$" > "$PID_FILE" 2>/dev/null

cleanup_and_exit() {
    rm -f "$PID_FILE" 2>/dev/null
    exit 0
}

on_sigint() {
    echo "Y U no love me?!"
}

on_sigterm() {
    echo "I hate the kill command"
    cleanup_and_exit
}

on_sigquit() {
    cleanup_and_exit
}

trap 'on_sigint' INT
trap 'on_sigterm' TERM
trap 'on_sigquit' QUIT

while true
do
    echo "To infinity and beyond"
    sleep 1
done
